@{
    ViewData["Title"] = "首页 | Kaakira";
}
@model IEnumerable<ArticleIndexData>

<div>
    @foreach (var m in Model) {
        <article class="article-item" role="listitem">
            <header>
                <div class="title aaa">
                    <router data-href="/article/@m.Code/@m.Id">@m.Title</router>
                </div>
                <div class="subtitle">
                    <span>@m.SubTitle</span>
                </div>
                <div>
                    @foreach (var tag in m.Tags) {
                        <span class="tag"><i class="fa fa-tag"></i>@tag.Value</span>
                    }
                    <span class="article-date">
                        <i class="fa fa-calendar"></i>
                        <time>@m.CreateDate.ToString("yyyy/MM/dd") </time>
                    </span>
                </div>
            </header>
            <figure class="subcontent article-content" role="contentinfo">
                @Html.Raw(m.Summary)
            </figure>
        </article>
    }
</div>
